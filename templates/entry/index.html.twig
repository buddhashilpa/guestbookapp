{% extends 'base.html.twig' %}

{% block title %}Hello EntryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

   <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Entrytext</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guestentry in entries %}
            <tr>
                <td>{{ guestentry.id }}</td>
                <td>{{ guestentry.title }}</td>
                <td>
                    <a href="{{ path('app_guestentry_show', {'id': guestentry.id}) }}">show</a>
                    <a href="{{ path('app_guestentry_edit', {'id': guestentry.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
