{% extends 'base.html.twig' %}

{% block title %}Guestentry index{% endblock %}

{% block body %}
   
    <div class="row">
        <div class="col-lg-12 align-center">
           <h2>Guestentry index</h2>
           <div class="col-lg-12">
              <div class="panel">
                <div class="panel-content">      
                  <div class="row">
                    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Created_on</th>
                <th>Status</th>
                <th>Modified_on</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guestentry in guestentries %}
            <tr>
                <td>{{ guestentry.id }}</td>
                <td>{{ guestentry.title }}</td>
                <td>{{ guestentry.image }}</td>
                <td>{{ guestentry.createdOn ? guestentry.createdOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ guestentry.status }}</td>
                <td>{{ guestentry.modifiedOn ? guestentry.modifiedOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_guestentry_show', {'id': guestentry.id}) }}">show</a>
                    <a href="{{ path('app_guestentry_edit', {'id': guestentry.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    <a href="{{ path('app_guestentry_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
